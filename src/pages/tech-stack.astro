---
import Layout from "../layouts/Layout.astro";
import { techStack } from "../utils/stack";
---

<Layout
  title="My Tech Stack"
  description="Explore the technologies I use in my development work"
>
  <main
    class="w-full min-h-screen justify-center items-center flex text-white p-6 xl:p-0"
  >
    <div class="w-full max-w-6xl flex flex-col gap-4">
      <div
        class="flex-col md:flex-row bg-gradient-to-br from-violet-900 to-violet-700 hover:from-violet-800 hover:to-violet-600 transition-all duration-300 border-2 border-violet-500 rounded-lg p-4 flex md:items-center justify-between"
      >
        <a
          href="/"
          class="text-violet-300 hover:text-white transition-colors w-full"
        >
          ‚Üê Back to Home
        </a>
        <h1 class="text-3xl font-bold w-full text-left md:text-right">
          My Tech Stack
        </h1>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        {
          Object.entries(techStack).map(([category, techs]) => (
            <div class="bg-gradient-to-br from-violet-900 to-violet-700 hover:from-violet-800 hover:to-violet-600 transition-all duration-300 border-2 border-violet-500 rounded-lg p-4 flex flex-col justify-between group">
              <div>
                <h2 class="text-2xl font-semibold mb-4 text-violet-300 group-hover:text-violet-200 transition-colors">
                  {category}
                </h2>
                <ul class="space-y-2">
                  {techs.map((tech) => (
                    <li class="flex items-center text-violet-200 group-hover:text-white transition-colors">
                      <tech.icon className="w-6 h-6 mr-2 text-violet-400 group-hover:text-violet-300 transition-colors" />
                      <span>{tech.name}</span>
                    </li>
                  ))}
                </ul>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </main>
</Layout>
