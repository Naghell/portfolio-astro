---
import Layout from "../layouts/Layout.astro";
import { projects } from "../utils/projects";
import { Image } from "astro:assets";
---

<Layout
  title="My Projects"
  description="Explore the projects I've worked on as a Full Stack Developer"
>
  <main
    class="w-full min-h-screen justify-center items-center flex text-white p-6"
  >
    <div class="w-full max-w-6xl flex flex-col gap-4">
      <div
        class="bg-gradient-to-br from-violet-900 to-violet-700 hover:from-violet-800 hover:to-violet-600 transition-all duration-300 border-2 border-violet-500 rounded-lg p-4 flex items-center justify-between"
      >
        <a href="/" class="text-violet-300 hover:text-white transition-colors">
          ‚Üê Back to Home
        </a>
        <h1 class="text-3xl font-bold text-center">My Projects</h1>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        {
          projects.map((project) => (
            <div class="bg-gradient-to-br from-violet-900 to-violet-700 hover:from-violet-800 hover:to-violet-600 transition-all duration-300 border-2 border-violet-500 rounded-lg p-4 flex flex-col justify-between group">
              <div>
                <h2 class="text-2xl font-semibold mb-2 text-violet-300 group-hover:text-violet-200 transition-colors">
                  {project.title}
                </h2>
                <Image
                  src={project.imageUrl}
                  alt={project.title}
                  width={500}
                  height={300}
                  class="w-full h-48 object-cover rounded-md mb-4"
                />
                <p class="text-violet-200 group-hover:text-white transition-colors mb-4">
                  {project.description}
                </p>
                <div class="flex flex-wrap gap-2 mb-4">
                  {project.technologies.map((tech) => (
                    <span class="flex items-center bg-violet-800 text-violet-200 px-2 py-1 rounded text-sm">
                      <tech.icon className="w-4 h-4 mr-1" />
                      {tech.name}
                    </span>
                  ))}
                </div>
              </div>
              <div class="flex gap-2">
                {project.githubUrl && (
                  <a
                    href={project.githubUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="flex items-center gap-1 md:gap-2 font-bold border-2 bg-violet-700/10 text-white text-center px-3 py-2 rounded hover:bg-violet-600/30 transition-all hover:-translate-y-1"
                  >
                    GitHub
                  </a>
                )}
                {project.liveUrl && (
                  <a
                    href={project.liveUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="flex items-center gap-1 md:gap-2 font-bold border-2 bg-violet-700/10 text-white text-center px-3 py-2 rounded hover:bg-violet-600/30 transition-all hover:-translate-y-1"
                  >
                    Live Demo
                  </a>
                )}
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </main>
</Layout>
