---
import { FaArrowLeft } from "react-icons/fa6";
import Layout from "../layouts/Layout.astro";
import { workExperience } from "../utils/experience";
---

<Layout
  title="Work Experience"
  description="Explore my professional journey as a Full Stack Developer"
>
  <main
    class="w-full min-h-screen justify-center items-center flex text-white p-6 xl:p-0"
  >
    <div class="w-full max-w-6xl flex flex-col gap-4">
      <div
        class="flex-col md:flex-row bg-gradient-to-br from-violet-900 to-violet-700 hover:from-violet-800 hover:to-violet-600 transition-all duration-300 border-2 border-violet-500 rounded-lg p-4 flex items-start md:items-center justify-between"
      >
        <a
          href="/"
          class="text-violet-300 hover:text-white transition-colors flex gap-2 items-center"
        >
          <FaArrowLeft />
          Back to Home
        </a>
        <h1 class="text-3xl font-bold text-center">Work Experience</h1>
      </div>

      {
        workExperience.map((job: any) => (
          <div class="bg-gradient-to-br from-violet-900 to-violet-700 hover:from-violet-800 hover:to-violet-600 transition-all duration-300 border-2 border-violet-500 rounded-lg p-6 flex flex-col gap-4 group">
            <div class="flex justify-between items-start">
              <div>
                <h2 class="text-2xl font-semibold text-violet-300 group-hover:text-violet-200 transition-colors">
                  {job.position}
                </h2>
                <h3 class="text-xl text-violet-400 group-hover:text-violet-300 transition-colors">
                  <a
                    href={job.companyUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="hover:underline"
                  >
                    {job.company}
                  </a>
                </h3>
              </div>
              <span class="text-violet-400 group-hover:text-violet-300 transition-colors">
                {job.period}
              </span>
            </div>

            <p class="text-violet-200 group-hover:text-white transition-colors">
              {job.description}
            </p>

            <div>
              <h4 class="text-lg font-semibold text-violet-300 group-hover:text-violet-200 transition-colors mb-2">
                Key Responsibilities:
              </h4>
              <ul class="list-disc list-inside text-violet-200 group-hover:text-white transition-colors space-y-1">
                {job.responsibilities.map((responsibility: any) => (
                  <li>{responsibility}</li>
                ))}
              </ul>
            </div>

            <div>
              <h4 class="text-lg font-semibold text-violet-300 group-hover:text-violet-200 transition-colors mb-2">
                Technologies Used:
              </h4>
              <div class="flex flex-wrap gap-2">
                {job.technologies.map((tech: any) => (
                  <span class="flex items-center bg-violet-800 text-violet-200 px-2 py-1 rounded text-sm">
                    <tech.icon className="w-4 h-4 mr-1" />
                    {tech.name}
                  </span>
                ))}
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </main>
</Layout>
