---
import Layout from "../layouts/Layout.astro";
import { aboutData } from "../utils/about";
---

<Layout
  title={`About Me - ${aboutData.personalInfo.name}`}
  description={`Learn more about ${aboutData.personalInfo.name}, a ${aboutData.personalInfo.occupation} from ${aboutData.personalInfo.location}`}
>
  <main
    class="w-full min-h-screen justify-center items-center flex text-white p-6 xl:p-0"
  >
    <div class="w-full max-w-6xl flex flex-col gap-4">
      <div
        class="bg-gradient-to-br from-violet-900 to-violet-700 hover:from-violet-800 hover:to-violet-600 transition-all duration-300 border-2 border-violet-500 rounded-lg p-4 flex justify-between items-center"
      >
        <a href="/" class="text-violet-300 hover:text-white transition-colors">
          ‚Üê Back to Home
        </a>
        <h1 class="text-3xl font-bold text-center">About Me</h1>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div
          class="bg-gradient-to-br from-violet-900 to-violet-700 hover:from-violet-800 hover:to-violet-600 transition-all duration-300 border-2 border-violet-500 rounded-lg p-4 flex flex-col group"
        >
          <h2
            class="text-2xl font-semibold mb-4 text-violet-300 group-hover:text-violet-200 transition-colors"
          >
            Personal Info
          </h2>
          <ul
            class="space-y-2 text-violet-200 group-hover:text-white transition-colors"
          >
            <li><strong>Name:</strong> {aboutData.personalInfo.name}</li>
            <li>
              <strong>Age:</strong>
              {aboutData.personalInfo.age} years old
            </li>
            <li>
              <strong>Location:</strong>
              {aboutData.personalInfo.location}
            </li>
            <li>
              <strong>Occupation:</strong>
              {aboutData.personalInfo.occupation}
            </li>
          </ul>
        </div>

        <div
          class="bg-gradient-to-br from-violet-900 to-violet-700 hover:from-violet-800 hover:to-violet-600 transition-all duration-300 border-2 border-violet-500 rounded-lg p-4 flex flex-col group"
        >
          <h2
            class="text-2xl font-semibold mb-4 text-violet-300 group-hover:text-violet-200 transition-colors"
          >
            Professional Summary
          </h2>
          <p class="text-violet-200 group-hover:text-white transition-colors">
            {aboutData.professionalSummary}
          </p>
        </div>

        <div
          class="bg-gradient-to-br from-violet-900 to-violet-700 hover:from-violet-800 hover:to-violet-600 transition-all duration-300 border-2 border-violet-500 rounded-lg p-4 flex flex-col group col-span-full"
        >
          <h2
            class="text-2xl font-semibold mb-4 text-violet-300 group-hover:text-violet-200 transition-colors"
          >
            Interests & Hobbies
          </h2>
          <ul
            class="grid grid-cols-2 md:grid-cols-3 gap-4 text-violet-200 group-hover:text-white transition-colors"
          >
            {
              aboutData.interests.map((interest: any) => (
                <li class="flex items-center">
                  <interest.icon className="w-6 h-6 mr-2 text-violet-400" />{" "}
                  {interest.name}
                </li>
              ))
            }
          </ul>
        </div>

        <div
          class="bg-gradient-to-br from-violet-900 to-violet-700 hover:from-violet-800 hover:to-violet-600 transition-all duration-300 border-2 border-violet-500 rounded-lg p-4 flex flex-col group col-span-full"
        >
          <h2
            class="text-2xl font-semibold mb-4 text-violet-300 group-hover:text-violet-200 transition-colors"
          >
            My Journey
          </h2>
          <p class="text-violet-200 group-hover:text-white transition-colors">
            {aboutData.journey}
          </p>
        </div>
      </div>
    </div>
  </main>
</Layout>
